from flask import Flask, request, jsonify, render_template
import csv
import os
import datetime

app = Flask(__name__)

# 保存先のファイル名を設定
CSV_FILENAME = "potential_test_results.csv"

@app.route('/')
def index():
    return render_template('index.html')

@app.route('/proxy', methods=['POST'])
def proxy():
    data = request.json
    
    if not data.get('results'):
        return jsonify({'error': 'No results provided'}), 400

    # CSVファイルにデータを追記
    csv_filename = append_to_csv(data['results'])

    return jsonify({'message': 'Data appended to CSV file'}), 200

def append_to_csv(results):
    file_exists = os.path.isfile(CSV_FILENAME)

    with open(CSV_FILENAME, mode='a', newline='', encoding='utf-8') as file:
        writer = csv.writer(file)
        
        # ヘッダーを最初の書き込み時のみ追加
        if not file_exists:
            writer.writerow(['Participant', 'Condition', 'TestType', 'TrialNumber', 'Result', 'ResponseTime(ms)'])

        # テスト開始時刻を取得
        test_start_time = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')
        
        # データ行を追加
        for result in results:
            writer.writerow([
                result['participant'],  # 参加者の名前
                result['condition'],    # Condition: 'Just Woke Up' or 'After Several Hours'
                result['testType'],     # Test Type: 'Implicit Learning' or 'Explicit Learning'
                result['trialNumber'],  # Trial Number: 'Trial 1', 'Trial 2', ...
                result['result'],       # Result: 'Correct' or 'Incorrect'
                result['responseTime'], # Response Time in milliseconds
                #test_start_time         # テスト開始時刻
            ])

    return CSV_FILENAME

if __name__ == '__main__':
    app.run(port=3000, debug=True)
